<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Storyblok - {{ story.name }}</title>
  <meta name="msapplication-tap-highlight" content="no">
  <link rel="manifest" href="/manifest.json?v99">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="application-name" content="Speed100">
  <link rel="icon" sizes="192x192" href="{{ 'assets/images/apple-touch-icon-180x180.png' | asset_url }}">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Web Starter Kit">
  <link rel="apple-touch-icon" href="{{ 'assets/images/apple-touch-icon-180x180.png' | asset_url }}">
  <meta name="msapplication-TileImage" content="{{ 'assets/images/apple-touch-icon-180x180.png' | asset_url }}">
  <meta name="msapplication-TileColor" content="#2F3BA2">
  <meta name="theme-color" content="#2F3BA2">

  {% if proxy_mode %}
    <link href="{{ 'assets/css/above.css' | asset_url }}" rel="stylesheet">
  {% else %}
    <style>{%- include 'above_fold_css' -%}</style>
  {% endif %}
  <link href="https://fonts.googleapis.com/css?family=Titillium+Web:200,400,600" rel="stylesheet">
  <link rel="preload" id="stylesheet" href="{{ 'assets/css/below.css' | asset_url }}" as="style" onload="this.rel='stylesheet'">
</head>
<body>
  {% spaceless %}
  {% include 'icon' %}
  <a class="u__vis-hidden" href="#main">Skip to main content</a>
  <header class="header">
    <div class="container header__container">
      <div class="header__logo">
        <svg class="icon"><use xlink:href="#icon-logo"></use></svg>
        Quickstart
      </div>

      <nav class="header__nav" role="navigation">
        <ul class="navbar">
          <li><a href="/">Home</a></li>
          <li><a href="/news">News</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main id="main" role="main">
    {% include story.content.component with blok: story.content, title: story.name, date: story.created_at %}
    {% include 'quickstart' %}
  </main>
  <footer>

  </footer>
  {% endspaceless %}

  {% if story.content._editable %}
  <script type="text/javascript" src="//app.storyblok.com/storyblok-latest.js"></script>
  <script type="text/javascript">

    storyblok.init({
      accessToken: '{{ public_token }}'
    });

    storyblok.on('change', function() {
      location.reload(true);
    });

    storyblok.pingEditor(function() {
      if (storyblok.inEditor) {
        storyblok.enterEditmode();
      }
    });

  </script>
  {% endif %}

  {% unless proxy_mode %}
  <script src="{{ 'assets/js/up.js' | asset_url }}"></script>
  <script>
    UpUp.debug(true);
    UpUp.start({
      'content': '<html><body><h1>You are offline now</h1><p>Content for offline</p></body></html>',
      'service-worker-url': '/service-worker.js'
    });
  </script>
  {% endunless %}

  {% if proxy_mode and params.quickstart %}
    <form id="storyblok-signin" action="https://localhost:3402/sso" method="post">
      <input type="hidden" name="sso_type" value="onetime">
      <input type="hidden" name="token" value="{{ params.quickstart }}">
      <input type="hidden" name="launch_path" value="/me/spaces/">
      <button type="submit">Submit</button>
    </form>
    <script type="text/javascript">
      document.getElementById('storyblok-signin').submit()
    </script>
  {% endif %}
</body>
